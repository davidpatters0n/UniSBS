#flashcontainer {
  padding: 0px;
}

.flash {
  margin-bottom: 5px;
  padding: 2px;
  border: 1px solid #127dac;
  text-align: center;
}

.closeflash {
  float: right;
  margin: 2px;
  width: 16px;
  height: 16px;
  cursor: pointer;
  font-family: Consolas Courier;
  font-weight: bold;
  background-image: url("<%= image_path 'closewarning.png' %>");
  background-position: center top;
}

.closeflash:hover {
  background-position: center bottom;
}

.error {
  background: #ff0000;
  color: white;
  font-weight: bold;
}

.alert {
  background: orange;
}

td {
  padding: 2px 10px 2px 5px;
}

.dp_table {
  padding: 0px;
  margin: 0px;
}

.dp_table td {
  padding: 0px;
}

td.blankrow {
  background: white !important;
  height: 16px;
}

.dp_table .ui-datepicker-trigger {
}

.dp_table input {
  width: 80% !important;
  position: relative;
  left:0px;
  right: 30px;
}

input[type="text"], input[type="password"], input[type="url"],
input[type="email"], input.text, input.title, textarea, select {
  margin: 0.2em 0 !important;
}
/********* ICON MENU STYLES **************************************/

.icon_menu {
  text-align: center !important;
  margin: auto;
  overflow: hidden;
  position: relative;
  border: 0px;
}

.icon_menu td {
  margin: 0px;
  padding: 0px;
  background: transparent !important;
}

.icon_menu_item, .icon_menu_dummy, .icon_menu_delete {
  margin: 10px;
  padding: 10px;
  width: 130px;
  height: 130px;
  border: 1px solid black;
  border-radius: 10px;
  -moz-border-radius: 10px;
  -webkit-border-radius: 10px;
  box-shadow: 6px 6px 12px #888888;
  -moz-box-shadow: 6px 6px 12px #888888;
  -webkit-box-shadow: 6px 6px 12px #888888;
  text-align: center;
  display: block;
  font-size: 14px;
  font-weight: bold;
}

.icon_menu_item, .icon_menu_delete {
  background: whitesmoke;
  background: -moz-linear-gradient( 120deg, #CCCCCC 0%, #D5D5D5 10%, #FBFBFB 100% );
  background: -webkit-gradient( linear, left top, right bottom, from(#FBFBFB), color-stop(0.9, #D5D5D5), to(#CCCCCC) );
  position: relative;
  cursor: pointer;
}

.icon_menu_delete {
  font-size: 12px;
}

.icon_menu_dummy {
  background: #E2E2E2;
  background: -moz-linear-gradient( 120deg, #AAAAAA 0%, #B5B5B5 10%, #DBDBDB 100% );
  background: -webkit-gradient( linear, left top, right bottom, from(#DBDBDB), color-stop(0.9, #B5B5B5), to(#AAAAAA) );
  position: relative;
}

.icon_menu_item img {
  padding-top: 15px;
}

.icon_menu_highlight {
  background: whitesmoke !important;
}

.icon_menu_img {
  position: absolute;
  bottom: 5px;
  left: 25px;
  width: 100px;
  height: 100px;
}

/* this is used as a list of options to drag onto the icon menu */
.icon_menu_option {
  background: whitesmoke;
  border: 1px solid black;
  padding: 2px;
  margin: 2px;
  line-height: 200%;
  display: block;
  cursor: pointer;
  white-space: nowrap;
}

.icon_menu_option_disabled {
  background: #CCCCCC;
  border: 1px solid black;
  padding: 2px;
  margin: 2px;
  line-height: 200%;
  display: block;
  white-space: nowrap;
}



/**************** DATA TABLE STYLES **********************************/

.dataTables_info {
  margin-top: 7px;
  float: left;
}

.paging_full_numbers {
  margin-top: 7px;
  height: 22px;
  line-height: 22px;
  width: 400px;
  float: right;
}
.paging_full_numbers span.paginate_button, .paging_full_numbers span.paginate_active {
  border: 1px solid #AAAAAA;
  border-radius: 5px 5px 5px 5px;
  cursor: pointer;
  margin: 0 3px;
  padding: 2px 5px;
}
.paging_full_numbers span.paginate_button {
  background-color: #DDDDDD;
}
.paging_full_numbers span.paginate_button:hover {
  background-color: #CCCCCC;
}
.paging_full_numbers span.paginate_active {
  background-color: #99B3FF;
}

.sorting_asc {
  background-image: url("<%= image_path 'up.gif' %>");
  background-position: right center;
  background-repeat: no-repeat;
}

.sorting_desc {
  background-image: url("<%= image_path 'down.gif' %>");
  background-position: right center;
  background-repeat: no-repeat;
}

.ui-datepicker-trigger {
  padding-left: 5px;
}

.td_with_errors {
  background: red !important;
}

/**************** QUERY TABLE STYLES *********************************/

.query_tbl {
  width: 80%;
  margin: auto;
}

td.query_fld {
  width: 30%;
}

td.query_type {
  width: 10%;
}

td.query_val {
  width: 60%;
}

.query_val input, .query_val select {
  width: 100%;
}

.query_tbl tfoot td {
  text-align: center;
}

.query_tbl td table td {
  padding: 0px;
}

/**************** PAGE-SPECIFIC STYLES *******************************/

#deliverytable, #stocktable, #ordertable {
  width: 100%;
}
