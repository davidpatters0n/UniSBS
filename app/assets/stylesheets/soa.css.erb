body {
  background: #d2d2d2;
}

#shadowheader {
  position: absolute;
  top: 10px;
  left: 10px;
  right: 10px;
  border-radius: 7px;
  box-shadow: 0 0px 4px #888888;
}

#upperheader {
  border: 2px solid white;
  background: #002e5f;
  padding: 3px;
  color: #ffffff;
  font-weight: bold;
  position: relative;
  z-index: 3;
  box-shadow: 0 0px 4px #888888;
  border-radius: 7px 7px 7px 7px;
}

#hometitle {
  width: 200px;
  height: 19px;
  padding: 4px 0px 4px 30px;
  background-image: url("<%= image_path 'matflo.png' %>");
  background-repeat: no-repeat;
  background-position: left top;
  cursor: pointer;
}

#hometitle:hover {
  background-position: left bottom;
}

#account {
  float: right;
  font-weight: normal;
  width: 500px;
  padding: 4px;
  text-align: right;
}

#account a {
  color: white;
}

#lowerheaderthin {
  height: 20px;
  border: 2px solid white;
  border-bottom-right-radius: 7px;
  position: relative;
  margin-top: -26px;
  z-index: 1;
  background: #127dac;
  padding: 10px 10px 0px 10px;
  color: #ffffff;
  font-weight: bold;
}

#lowerheader {
  position: absolute;
  top: 55px;
  left: 10px;
  right: 10px;
  height: 40px;
}

#lowerheaderleft {
  width: 300px;
  border: 2px solid white;
  border-top: 0px;
  border-radius: 0px 0px 7px 7px;
  padding: 2px 10px 7px 10px;
  margin-bottom: 0px;
  background: #127dac;
  position: relative;
  top: -2px;
  z-index: 2;
  box-shadow: 0 1px 4px #888888;
  float: left;
}

#lowerheaderleft input {
  margin: 0px;
  color: #888888;
  width: 280px;
  height: 20px;
  border-radius: 3px;
  padding-left: 3px;
  background-image: url("<%= image_path 'search.gif' %>");
  background-position: right center;
  background-repeat: no-repeat;
}

#lowerheadermid {
  width: 7px;
  height: 7px;
  position: relative;
  top: -2px;
  left: -2px;
  float: left;
  z-index: 4;
  background: #127dac;
}

#lowerheadercurve {
  width: 7px;
  height: 7px;
  border: 2px solid white;
  border-right: 0px;
  border-bottom: 0px;
  border-radius: 7px 0px 0px 0px;
  background: #d2d2d2;
    
  background-image: linear-gradient(left top, #B3B3B3 10%, #D2D2D2 79%);
  background-image: -o-linear-gradient(left top, #B3B3B3 10%, #D2D2D2 79%);
  background-image: -moz-linear-gradient(left top, #B3B3B3 10%, #D2D2D2 79%);
  background-image: -webkit-linear-gradient(left top, #B3B3B3 10%, #D2D2D2 79%);
  background-image: -ms-linear-gradient(left top, #B3B3B3 10%, #D2D2D2 79%);

  background-image: -webkit-gradient(
    linear,
    left top,
    right bottom,
    color-stop(0.1, #B3B3B3),
    color-stop(0.79, #D2D2D2)
  );
}

#lowerheaderright {
  padding-top: 6px;
  font-weight: bold;
  color: #666666;
}

#lowerheaderright span {
  display: inline-block;
  padding-left: 20px;
  padding-right: 20px;
}

#lowerheaderright span a {
  color: #666666;
  text-decoration: none;
}

#rightheaderback {
  position: absolute;
  top: 87px;
  height: 14px;
  right: 101px;
  width: 14px;
  background: #ebebeb;
  z-index: 2;
}

#rightheadercurve {
  position: absolute;
  top: 73px;
  height: 27px;
  right: 101px;
  width: 14px;
  background: #d2d2d2;
  border-width: 0px 1px 1px 0px;
  border-style: solid;
  border-color: #127dac;
  border-radius: 0px 0px 7px 0px;
  z-index: 2;
}

#rightheadertop {
  position: absolute;
  top: 66px;
  right: 10px;
  width: 90px;
  height: 7px;
  background: #ebebeb;
  border-width: 1px 1px 0px 1px;
  border-style: solid;
  border-color: #127dac;
  border-radius: 7px 7px 0px 0px;
  z-index: 1;
}

#rightheader {
  position: absolute;
  top: 73px;
  right: 10px;
  width: 70px;
  height: 40px;
  background: #ebebeb;
  border-width: 0px 1px 0px 0px;
  border-style: solid;
  border-color: #127dac;
  padding-left: 20px;
  z-index: 1;
}

#content {
  position: absolute;
  top: 100px;
  left: 10px;
  right: 10px;
  bottom: 0px;
  border: 1px solid #6377b0;
  border-radius: 7px;
  background: #ffffff;
  margin-top: 0px;
  margin-bottom: 10px;
  padding-bottom: 20px;
}

#contentpad {
  padding: 5px;
}

#contentscroll {
  padding: 10px;
  position: absolute;
  top: 41px;
  left: 0px;
  right: 0px;
  bottom: 10px;
  overflow: auto;
}


h1 {
  border-radius: 7px 7px 0px 0px;
  padding: 10px;
  border: solid #127dac;
  border-width: 0px 0px 1px 0px;
  background: #e8e8e8;
  background-image: linear-gradient(bottom, #E3E3E3 0%, #ECECEC 100%);
  background-image: -o-linear-gradient(bottom, #E3E3E3 0%, #ECECEC 100%);
  background-image: -moz-linear-gradient(bottom, #E3E3E3 0%, #ECECEC 100%);
  background-image: -webkit-linear-gradient(bottom, #E3E3E3 0%, #ECECEC 100%);
  background-image: -ms-linear-gradient(bottom, #E3E3E3 0%, #ECECEC 100%);
  background-image: -webkit-gradient(
    linear,
    left bottom,
    left top,
    color-stop(0, #E3E3E3),
    color-stop(1, #ECECEC) );
  font-size: 20px;
}

h2 {
  font-size: 18px;
  margin-top: 25px;
  border-bottom: 1px solid #888888;
}

.biginput {
  margin: auto;
  width: 500px;
  margin-top: 15px;
  margin-bottom: 20px;
}

.biginput span {
  display: inline-block;
  font-size: 18px;
  font-weight: bold;
  width: 200px;
}

.biginput input {
  font-size: 18px;
  font-weight: bold;
  width: 290px;
}

.button_bar form, .button_bar form div {
  display: inline-block;
}

