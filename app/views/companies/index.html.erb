<table id='indextable'>
	<thead>
		<th>Company Name</th>
		<th>Haulier Code</th>
		<th>Action</th>
	</thead>
	<% @companies.each do |company| %>
	<tr>
		<td> <% if company.name.empty? %>
		<%= link_to '(blank)', edit_company_path(company) %>
		<% else %>
		<%= link_to company.name, edit_company_path(company) %>
		<% end %> </td>
		<td> <%= company.tms %> </td>
		<td> <%= link_to 'Edit', edit_company_path(company) %>
		<% if company.is_external? %>,
		<%= link_to 'Remove', company, confirm: 'Are you sure?', method: :delete %>
		<% end %> </td>
	</tr>
	<% end %>
</table>
<br />
<br />
<div class="button_bar">
	<%= link_to 'Create New Company', new_company_path %> <%= link_to 'Back to Admin', admin_path %>
</div>
