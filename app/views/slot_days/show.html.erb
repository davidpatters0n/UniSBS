<style>
	td {
		background: #EEE;
		padding: 4px;
		cursor: pointer;
		border: 1px solid transparent;
		min-width: 50px;
	}
	td:hover {
		background: #777;
		color: #FFF;
	}
	.dashed-cell {
		border: 1px dashed #555;
	}
	.hour {
		width: 60px;
	}
	.mini {
		width: 20px;
	}
	#modal {
		border: 1px solid #AAA;
		background: #FFF;
